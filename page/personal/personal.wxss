.info{
    position: relative;
    margin-top: 2.8%;
    width: 100%;
    height: 208rpx;
}
.info .protrait{    
    width: 100%;
    height: auto;
    background-color: #fff;
}
.info .protrait .head{
    width: 160rpx;
    height: 160rpx;
    margin: 24rpx;
    border-radius: 50%;
}
.info .protrait text{
    float: right;
    font-size: 24rpx;
    color: #9B9B9B;
    line-height: 24rpx;
    padding: 92rpx 20rpx;
}
.info .protrait .right{
    float: right;
    padding-top: 92rpx;
    padding-right: 24rpx;
    width: 16rpx;
    height: 26rpx; 
}
.content{
    margin-top: 3%;
    position: relative;
    width: 100%;
    height: 162rpx;
    background-color: #fff;
}
.content .intro{
    width: 100%;
    height: 81rpx;
    line-height: 81rpx;
    border-bottom: 2rpx solid #f4f4f4; 
}
.content .intro .right{
    float: right;
    margin-top: 26rpx; 
    margin-left: 20rpx;
    margin-right: 24rpx;
    width: 16rpx;
    height: 26rpx;
}
.content .intro .txt{
    font-size: 32rpx;
    color: #555555;
    height: 81rpx;
    line-height: 81rpx;
    margin-left: 24rpx;
}
.content .nickname{
    padding-left: 20rpx;
    font-size: 32rpx;
    color: #9B9B9B;
    height: 81rpx;
    line-height: 81rpx;
}
.content .reset{
    float: right;
    padding-top: 28rpx;
    font-size: 24rpx;
    color: #9B9B9B;
    line-height: 24rpx;
}
.content .message{
    float: right;
    padding-top: 28rpx;
    font-size: 24rpx;
    color: #9B9B9B;
    line-height: 24rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 550rpx;
    height: 82rpx;
    white-space: nowrap;
    text-align: right;
}