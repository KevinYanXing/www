/**index.wxss**/
.inline-block {
  display: inline-block;
}
.text-overflow{
  word-break:keep-all;           /* 不换行 */
  white-space:nowrap;          /* 不换行 */
  overflow:hidden;               /* 内容超出宽度时隐藏超出部分的内容 */
  text-overflow:ellipsis;         /* 当对象内文本溢出时显示省略标记(...) ；需与overflow:hidden;一起使用。*/
}

.header {
    width: 100%;
    border-bottom: 1rpx solid #f2f2f2;
  position: absolute;
  left: 0;
  top: 0;
}
.list-sous{
	display: -webkit-flex;
	width: 100%;
	padding: 20rpx;
	box-sizing: border-box;
	z-index: 1;
	-webkit-transition: background 0.5s ease-in-out;
}
.list-sous.scrolled {
	background: #feb70f;
}
.list-sous .icon {
	width: 40rpx;
	height: 40rpx;
	vertical-align: top;
  position:relative;
  top:5rpx;
}
.list-sous .location {
	color: #fff;
	font-size: 30rpx;
	line-height: 40rpx;
	min-width: 100rpx;
	max-width: 340rpx;
	padding: 10rpx 20rpx 10rpx 10rpx;
	border-radius: 30rpx;
	background: rgba(0,0,0,0.3);
	margin-right: 20rpx;
	vertical-align: middle;
}
.list-sous .search {
	-webkit-flex: 1;
	color: #888;
	font-size: 30rpx;
	line-height: 40rpx;
	padding: 10rpx;
	border-radius: 38rpx;
	background: #fff;
	border:1rpx solid #e5e5e5;

}
