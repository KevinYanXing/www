}

.location:before {
  content: "";
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  vertical-align: text-top;
  margin-right: 8rpx;
  background: url('../image/loc.png') no-repeat;
  background-size: 24rpx;
}

