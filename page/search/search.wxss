/* pages/index/index.wxss */

.active {
  color: #0091ff !important;
  background: #fff;
}
.search_icon {
width:40rpx;
height:40rpx;
vertical-align:middle;

}
.header_search {
padding:30rpx 20rpx;
background:#ffffff;
box-shadow:0 2rpx 2rpx #e5e5e5;

}
.search {
  padding:12rpx 0;
background:#eaeaea;
color:#909090;
border-radius:67rpx;
font-size:24rpx;
text-align:center;
outline:none;
}

.arrowRight {
  width:20rpx;
height:20rpx;
margin:40rpx 20rpx 0 -20rpx;
float:right;
transition:0.3s;
transform:rotate(90deg);

}
.show_item_list wx-image {
transition:0.3s;
transform:rotate(-90deg);

}
.border::after {
content:"";
position:absolute;
bottom:0;
display:block;
width:100%;
height:1px;
background:#c6c6c6;
transform:scaleY(.5);
}

.content {
  display: flex;
  height: 100%;
  flex-direction: row;
  flex: 1;
  background: #ffffff;
  border-top:1px solid #e8e8e8;
}

.stateList {
  width: 25%;
  background: #e3e3e3;
  overflow-y: scroll;
}

.state_name {
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #727171;
  overflow: hidden;
}

.item_name {
  width: 100%;
  height: 100rpx;
  text-align: center;
  position:relative;
}

.item_list {
  display: none;
  background: #f3f3f3;
  text-align: center;
}

.show_item_list {
  display: block;
}

.show_item_list image {
  transition: 0.3s;
  transform: rotate(-90deg);
}

.item_list_num {
 position:relative;
}
.arrowRight {
  width: 20rpx;
  height: 20rpx;
  margin: 40rpx 20rpx 0 -20rpx;
  float: right;
  transition: 0.3s;
  transform: rotate(90deg);
}
.input {
  display:inline-block;
  width:85%;
  vertical-align:middle;
  font-size:26rpx;
  margin-left:10rpx;
  text-align:left;
  line-height:26rpx;
}

.c-show {
  display: flex;
}

.c-close {
  display: none;
}

.s-show {
  display: block;
}

/*输入框点击部分*/

.destination {
  /*box-shadow: 0px 1px 3px 0.3px rgba(6, 0, 1, 0.11);
