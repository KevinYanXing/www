.search-show .title {
  font-size: 32rpx;
  color: #282828;
  padding:18rpx 0rpx;
}
.search-show .city-detail {
  padding:18rpx 22rpx;
}
/*产品部分*/
.cityList{
  padding: 0 22rpx;
}
.city-detail .img {
  width:116rpx;
height:116rpx;
margin-right:26rpx;
vertical-align:top;
margin-top:11rpx;

}

.city-detail {
  padding: 18rpx 0;
  border-bottom:1px solid #e8e8e8;
  background-color: #ffffff;
}

.d-right {
  max-width:60%;
display:inline-block;

}

.d-right text {
  display: block;
  font-size: 36rpx;
  color: #282828;
  /*overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;*/
}

.d-right text:nth-child(2), text:nth-child(3) {
