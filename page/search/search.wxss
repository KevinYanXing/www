/* pages/index/index.wxss */
/* 固定页面位置 */
page{
  display:flex;
  flex-direction:column;
  height:100%;
}
/* 固定页面位置 end */

.header-top {
  padding:22rpx;
  background-color:#fff;
  border-bottom:1rpx solid #e8e8e8;
}
.plr22{
  padding:0 22rpx;
}
.active {
  color: #0091ff !important;
  background: #fff;
}
.header_search {
padding:30rpx 20rpx;
background:#01AFF6;
box-shadow:0 2rpx 2rpx #e5e5e5;
}
.arrowRight {
  width:20rpx;
height:20rpx;
margin:40rpx 20rpx 0 -20rpx;
float:right;
transition:0.3s;
transform:rotate(90deg);

}
.show_item_list wx-image {
transition:0.3s;
transform:rotate(-90deg);

}
.border::after {
  content:"";
  position:absolute;
  left:0;
  bottom:0;
  right:0;
  border-bottom:1rpx solid #ccc;
}
.active .border::after{
  border-bottom:1rpx solid #fff;
}
.content {
  display: flex;
  height: 100%;
  flex-direction: row;
  flex: 1;
  background: #ffffff;
}
.stateList {
  width: 25%;
  /*background: #f8f8f8;*/
  background: #eee;
  overflow-y: scroll;
}
.state_name {
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #727272;
  overflow: hidden;
}
.item_name {
  width: 100%;
  height: 100rpx;
  text-align: center;
  position:relative;
}
.item_list {
  display: none;
  background: #f3f3f3;
  text-align: center;
}
.show_item_list {
  display: block;
}
.show_item_list image {
  transition: 0.3s;
  transform: rotate(-90deg);
}

.item_list_num {
 position:relative;
}
.arrowRight {
  width: 20rpx;
  height: 20rpx;
  margin: 40rpx 20rpx 0 -20rpx;
  float: right;
  transition: 0.3s;
  transform: rotate(90deg);
}

/*输入框点击部分*/
.destination {
  /*box-shadow: 0px 1px 3px 0.3px rgba(6, 0, 1, 0.11);
  box-sizing: border-box;*/
  margin-bottom: 14rpx;
}
.search-show {
  /*background: #fff;*/
}
.search-show .title {
  font-size: 32rpx;
  color: #666;
  padding:18rpx 0rpx;
}
.search-show .city-detail {
  padding:18rpx 22rpx;
}
/*产品部分*/
.city-detail .img {
  width:116rpx;
  height:116rpx;
  margin-right:26rpx;
  vertical-align:top;
  margin-top:11rpx;
  border:1rpx solid #eaedf4;
}
.city-detail {
  padding: 18rpx 22rpx;
  border-bottom:1rpx solid #eee;
  background-color: #ffffff;
}
.d-right {
  max-width:60%;
  display:inline-block;
}
.d-right text {
  display: block;
  font-size: 28rpx;
  color: #282828;
  padding-bottom: 8rpx;
  /*overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;*/
}
.d-right text:nth-child(2), text:nth-child(3) {
  font-size: 24rpx;
  color: #969696;
}
.location:before {
  content: "";
  display: inline-block;
  width: 26rpx;
  height: 26rpx;
  vertical-align: text-top;
  margin-right: 8rpx;
  background: url('../image/loc.png') no-repeat;
  background-size: 24rpx;
}
