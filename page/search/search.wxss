/* pages/index/index.wxss */
/*固定*/
.form {
  width:100%;
  box-sizing:initial;
  overflow-x:initial;
}
.main-top {
  position:absolute;
  /*top:134rpx;*/
  top:109rpx;
  overflow-x:initial;
}
.cityList{
  overflow-x:hidden;
}
/*固定 end*/
.active {
  color: #0091ff !important;
  background: #fff;
}
.header-top {
  background-color:#fff;
  border-bottom:1px solid #e8e8e8;
}

.header_search {
padding:30rpx 20rpx;
background:#535e6c;
box-shadow:0 2rpx 2rpx #e5e5e5;
}
.arrowRight {
  width:20rpx;
height:20rpx;
margin:40rpx 20rpx 0 -20rpx;
float:right;
transition:0.3s;
transform:rotate(90deg);

}
.show_item_list wx-image {
transition:0.3s;
transform:rotate(-90deg);

}
.border::after {
  content:"";
  position:absolute;
  left:0;
  bottom:0;
  right:0;
  border-bottom:1rpx solid #ccc;
}
.active .border::after{
  border-bottom:1rpx solid #fff;
}
.content {
  display: flex;
  height: 100%;
  flex-direction: row;
  flex: 1;
  background: #ffffff;
}

.stateList {
  width: 25%;
  /*background: #f8f8f8;*/
  background: #eee;
  overflow-y: scroll;
}

.state_name {
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  color: #727272;
  overflow: hidden;
}

.item_name {
  width: 100%;
  height: 100rpx;
  text-align: center;
  position:relative;
}

.item_list {
  display: none;
  background: #f3f3f3;
  text-align: center;
}

.show_item_list {
  display: block;
}

.show_item_list image {
  transition: 0.3s;
  transform: rotate(-90deg);
}

.item_list_num {
 position:relative;
}
.arrowRight {
  width: 20rpx;
  height: 20rpx;
  margin: 40rpx 20rpx 0 -20rpx;
  float: right;
  transition: 0.3s;
  transform: rotate(90deg);
}
.c-show {
  display: flex;
}

.c-close {
  display: none;
}

.s-show {
  display: block;
}

/*输入框点击部分*/

.destination {
  /*box-shadow: 0px 1px 3px 0.3px rgba(6, 0, 1, 0.11);
  box-sizing: border-box;*/
  margin-bottom: 14rpx;
}

.search-show {
  /*background: #fff;*/
}

.search-show .title {
  font-size: 32rpx;
  color: #666;
  padding:18rpx 0rpx;
}
.search-show .city-detail {
  padding:18rpx 22rpx;
}
/*产品部分*/
.cityList{
  padding: 0 22rpx;
}
.city-detail .img {
