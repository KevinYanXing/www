<view class="header_search">
    <view class="mon">
        <block wx:if="{{ brandInfo.length > 0 }}">
        <view class="variety" wx:for="{{ brandInfo }}" wx:for-item="info">
            <view class="name">
                <view class="name-img red-b">
                    <image src="../../image/pz.png"></image>
                </view>
                 {{ info.title }}
            </view>
            <view class="inline-block min-h" wx:for="{{ info.brand }}">
                <view class="category {{ item.show==true?'light':'' }}" id="{{ item.id }}" bindtap="selectBrand">{{ item.name }}</view>
            </view>
        </view>
        </block>
        <block wx:else>
            <view class="wait-more">暂无数据</view>
        </block>
    </view>
    <view class="add-address">
        <button class = "address-btn" bindtap="nextStep">下一步</button>
    </view>
</view>