  width:100%;
}
.top-slider {
  display: block;
  width: 100%;
  height: 40%;
  background: white;
  border: 2rpx solid #e5e5e5;
}
.slider-sec{
  width: 100%;
  height: 100%;
}
.slide-image{
  width:100%;
