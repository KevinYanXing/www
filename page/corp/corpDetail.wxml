<!--index.wxml-->
<view class="sec-kill">
    <view class="header list-tab">
        <view class="header-wrapper">
            <view class="single" wx:for="{{navTab}}" wx:for-index="idx" wx:for-item="itemName" data-idx="{{idx}}" bindtap="switchTab">
                <view class="text-detail {{currentNavtab==idx ? 'active' : ''}}">
                    {{itemName}}
                </view>
            </view>
         </view>
    </view>
    <view class="main-container">
        <view class="tab_con flexItem {{currentNavtab==0 ? 'list_active0' : ''}} {{currentNavtab==1 ? 'list_active1' : ''}} {{currentNavtab==2 ? 'list_active2' : ''}}">
            <view class="view0 width20 mt20">
                <scroll-view class="tableView">
                    <view class="back">
                        <view class="clue">
                            <view class="p35">
                                <view class="title-content">
                                    <view class="title">{{ mdetail.pname }}</view>
                                </view>
                            </view>
                        </view>
                        <view class="clue">
                            <view class="p35">
                                <view class="content border tuBiao">
                                    <image src="../../image/x1.png"></image>
                                    <view class="value">
                                        <text class="value-text">{{ mdetail.ptype_name }}</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="clue">
                            <view class="p35">
                                <view class="content border tuBiao">
                                    <image src="../../image/x1.png"></image>
                                    <view class="value">
                                        <text class="value-text">{{ mdetail.pstate_name }}</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="clue">
                            <view class="p35">
                                <view class="content border tuBiao">
                                    <image src="../../image/x1.png"></image>
                                    <view class="value">
                                        <text class="value-text">{{ mdetail.pperson }}</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="clue">
                            <view class="p35">
                                <view class="content border tuBiao">
                                    <image src="../../image/x2.png"></image>
                                    <view class="value">
                                        <text class="value-text">{{ mdetail.pcontact }}</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="clue">
                            <view class="p35">
                                <view class="content border tuBiao">
                                    <image src="../../image/x3.png"></image>
                                    <view class="value">
                                        <text class="value-text">{{ mdetail.pmarket }}</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="clue">
                            <view class="p35">
                                <view class="content tuBiao">
                                    <image src="../../image/x3.png"></image>
                                    <view class="value">
                                        <text class="value-text">{{ mdetail.plocation }}</text>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="p35">
                            <view class="top-slider">
                                <swiper class="slider-sec" indicator-dots="{{indicatorDots}}"
        autoplay="true" interval="{{interval}}" duration="{{duration}}">
                                    <block wx:for="{{imageName}}">
                                        <swiper-item>
                                            <image mode="aspectFill" src="{{item}}" data-src="{{item}}" class="slide-image" width="355" height="150"bindtap="bigImage"/>
                                        </swiper-item>
                                    </block>
                                </swiper>
                            </view>
                        </view>
                    </view>
                    
                    <view class="mb20">
                        <view class="noing border">
                            <view class="weuijz prl">
                                <view class="weui">产品</view>
                            </view>
                        </view>
                        <block wx:if="{{ mdetail.pproduct.length!=0 }}">
                        <view class="mychanPing mb20" wx:for="{{ mdetail.pproduct }}">
                            <view class="p20 border">
                                <view class="order-info">
                                    <view wx:if="{{ item.mfd }}"><text class="cp-time">MFD:</text>{{ item.mfd }}</view>
                                    <view wx:if="{{ item.exp }}"><text class="cp-time">EXP:</text>{{ item.exp }}</view>
                                    <view wx:if="{{ item.bnum }}">
                                        <text class="order-state">{{ item.bnum }}</text>
                                    </view>
                                </view>
                                <view class="inline-block" style="width:100%;">
                                    <view class="image">
                                        <image style="width: 100%; height:100%" mode="aspectFit" src="{{ item.logoid }}"></image>
                                    </view>
                                    <view class="cp-p">
                                        <view class="mingChen">
                                        {{ item.name }}
                                        </view>
                                        <view class="tiaoxingMa inline-block">条形码：{{ item.num }}</view>
                                        <view class="cp-shuLang cp-gy" wx:if="{{ item.nums }}">购样数：
                                            <text>{{ item.nums }}</text>
                                            <text wx:if="{{ item.price }}">金额：￥{{ item.price }}</text>
                                        </view>
                                    </view>
                                </view>
                            </view>
                        </view>
                        </block>
                        <block wx:else>
                            <view class="">暂无数据</view>
                        </block>
                    </view>
                </scroll-view>
            </view>
            <view class="view1 width20 mt20"  bindtouchstart="catchtouchstart" bindtouchend="catchtouchend">
                <scroll-view class="tableView">
                    <view class="mycase">
                        <view class="logis-info">
                             <view class="cell prl">
                                <view class="cellblock">
                                    <view class="cellTitle">普查状态：</view>
                                    <view class="cellContent">
                                    <block wx:if="{{ mdetail.sta == 1 }}">
                                        <text class="celltext gray">{{ mdetail.sta_name }}</text>
                                    </block>
                                    <block wx:elif="{{ mdetail.sta == 2 }}">
                                        <text class="celltext green">{{ mdetail.sta_name }}</text>
                                    </block>
                                    <block wx:else>
                                        <text class="celltext red">{{ mdetail.sta_name }}</text>
                                    </block>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <block wx:if="{{ mdetail.verify.length>0 }}">
                            <view class="back">
                                <view class="classname">
                                
                                    <view class="detail" wx:for="{{ mdetail.verify }}">
                                        <view class="bdr">
                                            <view class="content-time">
                                                <view>客服：</view>
                                                <text>{{ item.descs }}</text>
                                            </view>
                                            <view class="time">{{ item.d }}</view>
                                        </view>
                                    </view>    
                                </view>
                            </view>
                        </block>
                        <block wx:else>
                            <view class="error">暂无数据</view>
                        </block>
                    </view>
                    
                    
                </scroll-view>
            </view>
    
        
        </view>
    </view>
</view>  

