<view class="addr-body">
  <view class="mt40">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">账号：</view>
        </view>
        <view class="weui-cell__bd">
           <input class="weui-input" bindinput = "account" name="input" placeholder="请输入账号" value = "{{account}}" placeholder-style = "color: #888888; "/>
        </view>
      </view>
    </view>

    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">密码：</view>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" bindinput = "pwd" type="password" placeholder="请输入密码" value = "{{pwd}}" placeholder-style = "color: #888888; "/>
        </view>
      </view>
    </view>
  </view>

    <view class="plr15 mt40">
        <button class = "address-btn" formType="submit" bindtap = "login">登录</button>
    </view>
</view>