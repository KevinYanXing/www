<view class="addr-body">
    <form class = "form" bindsubmit="formSubmit" bindreset="formReset">
        <view class="top-sec">
            <view class="input-wrapper mb20">
                <view class="input-w" url="../search/variety" bindtap="bSelect">
                    <view class="input-title">线索品种</view>
                    <view class="input-cell tr">
                        <view class="input-text">
                            <block wx:if="{{bSelected}}">
                                <block wx:for="{{bSelected}}">
                                    <block wx:if="{{ index+1<bSelected.length }}">
                                        {{ item.name }}、
                                    </block>
                                    <block wx:else>
                                        {{ item.name }}
                                    </block>
                                </block>
                            </block>
                        </view>
                        <view class="navigator-arrow"></view>
                    </view>
                </view>
            </view>
            <view class="input-wrapper">
                <view class="input-w">
                    <view class="input-title">目标名称</view>
                    <view class="input-cell">
                        <input bindinput = "cName" name="input" placeholder="请输入目标名称" value = "{{cname}}" placeholder-style = "color: #888888; "/>
                    </view>
                </view>
            </view>
            <view class="input-wrapper">
                <view class="input-w">
                    <view class="input-tlitle">目标性质</view>
                    <view class="input-cell">
                        <picker mode="selector" bindchange="cType" placeholder="选择性质" value="{{ctype}}" range="{{carray}}">
                            <view class="input-text">{{carray[ctype]}}</view>
                            <view class="navigator-arrow"></view>
                        </picker>
                    </view>
                </view>
            </view>
            <view class="input-wrapper">
                <view class="input-w">
                    <view class="input-title">目标人员</view>
                    <view class="input-cell">
                        <input bindinput = "cPerson" name="input" placeholder="请输入目标老板或负责人" value = "{{cperson}}" placeholder-style = "color: #888888; "/>
                    </view>
                </view>
            </view>
            <view class="input-wrapper">
                <view class="input-w">
                    <view class="input-title">目标联系</view>
                    <view class="input-cell">
                        <input bindinput = "cContact" name="input" placeholder="请输入目标联系方式" value = "{{ccontact}}" placeholder-style = "color: #888888; "/>
                    </view>
                </view>
            </view>
            <view class="input-wrapper">
                <view class="input-w">
                    <view class="input-title">目标城市</view>
                    <view class="input-cell tr">
                        <view class="input-text">
                            <view wx:if = "{{!ccity.area}}" class = "not-set" bindtap = "cArea">定位城市</view>
                            <view wx:if = "{{ccity.area}}" class = "set" bindtap = "cArea"> {{ccity.province}}/{{ccity.city}}/{{ccity.area}}</view>
                        </view>
                        <view class="navigator-arrow"></view>
                    </view>
                </view>
            </view>
            <form>
            <view class="page-section input-wrapper">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                    <view class="weui-uploader">
                        <view class="weui-uploader__hd">
                        <view class="weui-uploader__title">上传图片（目标门店、仓库、营业执照以及内部情况等照片）</view>
                        <view class="weui-uploader__info">{{imageList.length}}/9</view>
                        </view>
                        <view class="weui-uploader__bd">
                        <view class="weui-uploader__files">
                            <block wx:for="{{imageList}}" wx:for-item="image">
                            <view class="weui-uploader__file">
                                <image mode="aspectFill" class="weui-uploader__img" src="{{image}}" data-src="{{image}}" bindtap="cPhotoedit"></image>
                            </view>
                            </block>
                        </view>
                        <view class="weui-uploader__input-box">
                            <view class="weui-uploader__input" bindtap="cPhoto"></view>
                        </view>
                        </view>
                    </view>
                    </view>
                </view>
            </view>
            </form>
            <view class="mb20">
                <view class="page-section-title">执法描述</view>
                <view class="input-wrapper">
                    <view class="input-w">
                        <view class="page-section">
                            <view class="textarea-wrp">
                                <textarea bindblur="cDescripe" placeholder="请描述执法过程" value = "{{cDescripe}}" placeholder-style="color: #888888;" auto-height />
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            
            <view class="noing mt40">
                <view class="weuijz p026">
                    <view class="weui">
                        涉及产品 
                    </view>
                    <view class="nav-right " bindtap="cProduct">
                        <image class="tb-width"  src="../../image/jia.png"></image>
                        添加
                    </view>
                </view>
            </view>
            <block wx:if="{{ cproduct.length!=0 }}">
            <view class="input-wrapper" wx:for="{{ cproduct }}" wx:if="{{ item!=null }}">
                <view class="input-w" bindtap="delProduct" id="{{ index }}">
                    <view class="input-title">产品{{ index + 1 }}</view>
                    <view class="input-cell tr">
                        <view class="input-text">
                            {{ item }}
                        </view>
                        <view class="navigator-arrow"></view>
                    </view>
                </view>
            </view>
            </block>
            <block wx:else>
                <view class="error">暂无数据</view>
            </block>
        </view>
    
    </form>
    <view class="add-address">
        <button class = "address-btn" formType="submit" bindtap = "cConfirm">保存</button>
    </view>
