@import "../../../common/lib/weui.wxss";

/*产品信息*/
.city-detail {
  padding: 18rpx;
  border-bottom:1rpx solid #e8e8e8;
  border-top:1rpx solid #e8e8e8;

  background-color: #ffffff;
}
.image{
    overflow: hidden;
    display:inline-block;
    width: 150rpx;
    height: 150rpx;
    border: 1rpx solid #eaedf4;
    border-radius: 0rpx;
    text-align: center;
    float: left;
}
.image image{
    vertical-align: middle;
    width: initial;
    height: initial;
}
.d-right {
    margin-left:90px;
}

.d-right text {
  display: block;
  font-size: 26rpx;
  color: #282828;
}

.d-right text:nth-child(2), text:nth-child(3) {
  font-size: 12px;
  color: #868686;
}
.pb20{
    padding-bottom: 20rpx;
}
/*操作*/
.bottom-sec{
    padding-top: 18rpx;
    font-size: 30rpx;
    text-align:right;
    border-top:1rpx solid #e5e5e5;
}
.biao-arrow{
  display:inline-block;
  position:relative;
  top:5rpx;
}
.delete{
    color:#f53135;
  display:inline-block;
  padding-right:20rpx;
}
/*操作 end*/
