
<view class="purchase">
    <view class="header">
        <view class="list-sous {{showView?'':'none'}}" bindtap="onChangeShowState">
            <view class="non search" bindtap="tapSearch">
                <icon class="icon" type="search" size="14"></icon>
                <text>搜索</text>
            </view>
        </view>
        <!--搜索状态-->
        <view class="list-sous none {{showView?'':'Block'}}">
            <view class="cancel" bindtap="onChangeShowState">取消</view>
            <view class="search" bindtap="tapSearch">
                <icon class="icon" type="search" size="14"></icon>
                <input type="text" value="{{ searchValue }}" class="input" bindinput="oninput" placeholder="输入关键字搜索" />
            </view>
        </view>
        <view class="list-tab">
            <view class="header-wrapper"  style = "width: {{length *300}}rpx">
                <view class = "single" wx:for="{{product}}" wx:for-index="index" data-index = "{{index}}"  bindtap="switchTab">
                    <text class = "text-detail {{curNav == index ? 'active' : ''}}">{{item.sta}}</text>
                </view>
            </view>
        </view>
    </view>
    <view class = "main-container">
        <view class="chanPing">
            <block wx:if="{{list.goodsList == null}}">
                <view class="wait-more">暂无数据</view>
            </block>
            <block wx:if="{{list.minfo != null}}" >
                <view class = "list-detail cp-box" wx:for="{{list.minfo}}" wx:for-item="item" data-value = "{{item}}">
                    <view class="list-sec"  bindtap="selected" id="{{ item.id }}" data-value="{{ index }}">
                        <view class="go-buy p35">
                            <view class="time-l">提交：2017-0-26</view>
                            <view class="go-r">完成</view>
                        </view>
                        <view class="inline-block background">
                             <view class="p35">
                                <view class="image">
                                    <image mode="aspectFill" src="{{item.goodsImg}}" background-size="cover"></image>
                                </view>
                                <view class = "bottom-sec">
                                    <view class="now">{{item.sellPrice}}</view>
                                    <view class = "top-title">
                                        <view class = "title inline-block">{{item.goodsName}}</view>
                                        <view class = "text-overflow description inline-block blue">{{item.tagline}}</view>
                                    </view>
                                    <view class = "top-title">
                                        <view class = "fl title">{{item.addr}}</view>
                                        <view class = "w70 description">{{item.address}}</view>
                                    </view>
                                </view>
                            </view>
                        </view>
                        <view class="reply p35">
                            <view class = "fl title">
                                审核内容：
                            </view>
                            <view class="w80">
                                <block wx:if="{{ item.verify }}">
                                    {{item.verify}}
                                </block>
                                <block wx:else>
                                     暂未审核
                                </block>
                            </view>
                            <view class="fl title f-time">
                                审核时间：
                            </view>
                            <view class="w80 f-time">
                                <block wx:if="{{ item.verify }}">
                                    {{item.vd}}
                                </block>
                                <block wx:else>
                                    暂未审核
                                </block>
                            </view>
                        </view>
                    </view>
                </view>
            </block>
        </view>
    </view>

</view>